extends main.layout.pug 

block content 
  .welcome-section 
    section.hero 
      .container.hero__container
        header.header
          a.logo(href="") ВА

          nav.menu
            ul.menu__list
              - var menuLinks = ["Обо мне", "Навыки", "Работы", "Отзывы"];
              each item in menuLinks 
                li.menu__item
                  a(href="#").menu__link #{item}

          ul.socials
            - var socials = ["insta", "vk", "github", "envelope"];
            each item in socials
              li.socials__item
                a(href="#").socials__link
                  +icon(item, "socials__icon")

        .userinfo
          .userinfo__title Личный сайт веб разработчика
          .userinfo__name Владимир Астаханов

        .hero__bottom-buttons
          button.scroll-down-btn
            .scroll-down-btn__title Скролл
            a(href="#").scroll-down-btn__link
              +icon("scroll", "scroll-down-btn__icon")

    section.about
      .container.about__container 
        .about__user 
          .user
            .user__avatar 
              .user__avatar-wrapper
                +image("content/user.jpg", "yser__avatar-pic")
              -
                var userInfo = [
                  {
                    key: "Проживаю",
                    value: "Новосибирск"
                  },
                  {
                    key: "Возраст",
                    value: "27 лет"
                  },
                  {
                    key: "Родился",
                    value: "1 января 1991"
                  }
                ];

              table.user__data 
                each item in userInfo 
                  tr.user__data-row 
                    td.user__data-title #{item.key}:
                    td.user__data-content #{item.value}

        .about__content 
          .about__desc Привет, меня зовут
          .about__title Владимир Астаханов
          .about__text-info 
            p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__ps 
            | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          


