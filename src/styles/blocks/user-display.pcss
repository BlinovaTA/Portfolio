.user-display {
  display: flex;
  align-items: center;

  &__avatar-style {
    width: 75px;
    height: 75px;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 30px;
  }

  &__name {
    font-weight: bold;
    font-size: 18px;
    margin-bottom: 12px;
  }

  &__position {
    font-weight: 600;
    color: rgba($text-color, .5);
  }
}