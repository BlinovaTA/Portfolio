.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 27px;

  &__item {
    padding: 13px 21px;
    background: #f1f5f9;
    font-size: 15px;
    font-weight: 600;
    color: rgba($text-color, .7);
    border-radius: 50px;
    margin-right: 8px;
    margin-bottom: 8px;

    &:last-child {
      margin-right: 0;
    }
  }
}