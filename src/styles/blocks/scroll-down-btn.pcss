.scroll-down-btn {
  display: flex;
  background: none;
  outline: none;

  &:focus {
    outline: none;
  }

  &__title {
    font-weight: 600;
    font-size: 18px;
    margin-right: 15px;
    color: $text-color;
  }

  &__link:focus {
    outline: none;
  }

  &__icon {
    fill: $text-color;
    width: 14px;
    height: 14px;
  }
}