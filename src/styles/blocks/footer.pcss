.footer {
  background: #252830;

  &__container {
    height: 370px;
    display: flex;
    padding-top: 70px;
  }

  &__copyright {
    width: 30%;
    display: flex;
    justify-content: space-evenly;

    @include desktop {
      justify-content: flex-start;
      flex-direction: column;
    }

    @include desktop {
      &-col {
        margin-bottom: 20px;
      }
    }    

    &-year {
      font-weight: 600;
      font-size: 48px;
    }

    &-userinfo {
      display: flex;
      flex-direction: column;
    }

    &-name {
      font-weight: bold;
      font-size: 18px;
      color: white;
      text-transform: uppercase;
      margin-bottom: 16px;
    }
  }

  &__data {
    width: 70%;
    display: flex;
    flex-direction: column;
  }

  &__data-content {
    display: flex;
    justify-content: space-between;
  }

  &__data-menu {
    margin-bottom: 45px;

    .menu__list {
      justify-content: start;
    }

    .menu__link:hover {
      color: $text-color-hover-dark;
    }
  }

  &__data-text {
    color: rgba(#fff, .45);
    margin-bottom: 50px;
  }

  &__data-col {
    max-width: 350px;

    &--quote {
      width: 45%;
      max-width: none;
    }
  }
}